{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static"
    },
    {
      "src": "admin/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/client/build/assets/$1"
    },
    {
      "src": "^/manifest.json",
      "dest": "/client/build/manifest.json"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/client/build/favicon.ico"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/admin",
      "dest": "/admin/build/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/build/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
}
